doctype html

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/reset.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/head.css')
    link(rel='stylesheet', href='/stylesheets/right.css')
    script(src='/js/jquery.min.js')
    script(src='/js/libs.js')
  body
    block head
      #header
        div(class="head-cont")
          div(class="logo")
            a(href="/")
              img(src="/images/logo.jpg")
          div(class="nav")
            a(href="/") 首页
            a(href="javascript:;") 题库
          div(class="head-right")
            div(class="search")
              input(type="text" placeholder="搜索")
              a(href="javascript:;" class="fa fa-search" aria-hidden="true")
            div(class="notice")
              a(href="javascript:;" class="fa fa-bell" aria-hidden="true")
            div(class="user")
              if user
                a(href="javascript:;" class="headimgurl")
                  if user.headimgurl
                    img(src="/images/tx.png" class="headimgurlImg")
                  else  
                    img(src="/images/tx.jpg" class="headimgurlImg")
                  div(class="user-info-list")
                    a(class="user-info-items" href="javascript:;") 我的创作
                    a(class="user-info-items" href="javascript:;") 个人设置
                    a(class="user-info-items" id="logout" href="javascript:;") 退出登录
              else    
                a(href="javascript:;" id="loginBar") 登录 / 注册
                
              //a(class="addBtn" type="button" ) 开始创作
    block content

    block login
      include includes/login
