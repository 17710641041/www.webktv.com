extends layout

block content
    link(rel='stylesheet', href='/stylesheets/editormd.css')
    link(rel='stylesheet', href='/stylesheets/write.css')
    #main
        div(class="main-cont")
            div(class="title")
                input(type="text" id="activity-title" placeholder="请输入文章标题")
            #test-editormd
                textarea(style="display:none;" placeholder="文章标题")
            div(class="type-box")
              - for (var i = 0; i < types.length; i++)
                //a(href="javascript:;" class="type-on") javaScript
                a(href="javascript:;" typeid=types[i].id) #{types[i].name}
            div(class="footer-btn")
                a(href="javascript:;" id="addSubmit") 发布
    script(src='/js/editormd.js')
    script(src='/js/languages/en.js')
    script(src='/js/write.js')


